@inject Shopping.Repositories.Infrastructure.IMenuService _menuService;

@section Styles{
    <link href="~/css/custom-mvc/admin.css" rel="stylesheet" />
}

<div class="container_16 padding50">
    <div class="grid_16">
        <div class="ribbonbig">
            <div class="lijevo">
                <div class="bread"><a href="#">Home</a>&nbsp;&nbsp;&gt;&nbsp;Add Product</div>
                <div class="bigtitle">Add Product</div>
            </div>
            <div class="desno">
                <a href="#" class="padd">Buy theme</a>
            </div>
        </div>
    </div>

    <div class="grid_16">
        <div class="padding25">
            <div class="billing">
                <div class="shiztitle2">
                    <h2 class="title h2bg">Product Details</h2>
                </div>
                <div class="div-h50">
                    <form>
                        <select class="full req" id="">
                            <option value="" selected disabled>Sub Category</option>
                            @foreach (var category in _menuService.Get(filter: category => category.ParentItemId > 1, orderBy: category => category.OrderBy(x => x.Name)))
                            {
                                <option value="@category.Id">@category.Name</option>
                            }
                        </select>
                        <input type="text" class="full req" name="pname" id="bname" placeholder="Product Name" />
                    </form>
                </div>
                
                <div class="varient-detail">
                    <div class="shiztitle2">
                        <h2 class="title h2bg">Variants Detail</h2>
                    </div>
                    <div class="dashed-outer">
                        <div class="dashed-inner">
                            <form class="form-sku">
                                <input type="text" class="full req" name="vname" id="vname" placeholder="Variant name" />
                                <input type="text" class="full" name="blastname" id="blastname" placeholder="SKU" />
                                <input type="number" class="half req" name="bzip" id="bzip" placeholder="Original Price" />
                                <input type="number" class="half req" name="bzip" id="bzip" placeholder="Sale Price" />
                                <input type="number" class="half req" name="bzip" id="bzip" placeholder="Quantity in Stock" />
                                <input type="number" class="half req" name="bzip" id="bzip" placeholder="Minimum Inventory Alert" />
                                <input type="file" class="half req" name="bzip" id="bzip" placeholder="Thumb Image" />
                                <input type="text" class="half req" name="bzip" id="bzip" placeholder="Color" />
                                <select class="half" id="">
                                    <option value="" selected disabled>Dynamic for Style</option>
                                </select>
                                <textarea type="text" class="full" name="bzip" id="bzip" placeholder="Description" rows="4" style="height:auto;"></textarea>
                                <div class="clear"></div>
                                <input type="submit" class="mailsubmit" style="float: left;margin-top: 0;" placeholder="Register" />
                            </form>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
